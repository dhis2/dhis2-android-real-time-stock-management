<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.dhis2.android.rtsm" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="org.icrc.dhis2.psmadvanced_test"
                android:path="/J4CFTTod1TjeYgl9zsMgdcEaXnY="
                android:scheme="msauth" />
        </intent>
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>
    </queries>

    <application>
        <activity
            android:name="org.dhis2.android.rtsm.ui.settings.SettingsActivity"
            android:theme="@style/Theme.App" />
        <activity android:name="org.dhis2.android.rtsm.ui.home.HomeActivity" />
        <activity
            android:name="org.dhis2.android.rtsm.ui.managestock.ManageStockActivity"
            android:parentActivityName="org.dhis2.android.rtsm.ui.home.HomeActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="org.dhis2.android.rtsm.ui.reviewstock.ReviewStockActivity"
            android:parentActivityName="org.dhis2.android.rtsm.ui.managestock.ManageStockActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="org.dhis2.android.rtsm.ui.scanner.ScannerActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.BarcodeCapture"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>